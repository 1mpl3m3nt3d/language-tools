{
  "name": "prisma",
  "displayName": "Prisma",
  "description": "Adds syntax highlighting, formatting, auto-completion, jump-to-definition and linting for .prisma files.",
  "version": "0.0.4",
  "icon": "logo_white.png",
  "engines": {
    "vscode": "^1.34.0"
  },
  "publisher": "Prisma",
  "categories": [
    "Languages"
  ],
  "repository": {
    "type": "github",
    "url": "https://github.com/prisma/vscode"
  },
  "main": "./out/src/extension",
  "contributes": {
    "languages": [
      {
        "id": "prisma",
        "aliases": [
          "Prisma",
          "prisma"
        ],
        "extensions": [
          ".prisma"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "prisma",
        "scopeName": "source.prisma",
        "path": "./syntaxes/prisma.tmLanguage.json"
      }
    ]
  },
  "scripts": {
      "postinstall": "node ./node_modules/vscode/bin/install && tsc && cp ./runtime/prisma-fmt out/"
  },
  "activationEvents": [
    "onLanguage:prisma"
  ],
  "dependencies": { },
  "devDependencies": {
    "@types/node": "*",
    "vscode": "1.0.3",
    "typescript": "2.0.6"
  }
}
